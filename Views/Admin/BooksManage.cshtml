@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center">Quản lý sản phẩm</h1>
<div class="button-area" style="display: flex;justify-content: end;">
    <button type="button" class="btn btn-success" id="btn-add"><i class="fa-solid fa-plus"
            style="color: #ffffff;"></i></button>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">STT</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Nhà xuất bản</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Trạng thái</th>
            <th scope="col">Giá tiền</th>
            <th scope="col">Danh mục</th>
            <th scope="col">Tên tác giả</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Tác vụ</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Truyện Marvels</td>
            <td>Kim Đồng</td>
            <td style="max-width: 80px;text-overflow: ellipsis;overflow: hidden;white-space: nowrap;">
                Marvel Comics (hay đơn giản là Marvel) là nhà xuất
                bản truyện tranh của Mỹ và là chi nhánh chính của Marvel Worldwide Inc. (trước đây là Marvel
                Publishing, Inc.
            </td>
            <td>18</td>
            <td>Còn hàng</td>
            <td>108.000VNĐ</td>
            <td>Truyện tranh</td>
            <td>John Fiew</td>
            <td>
                <img src="~/images/book1.jfif" alt="" style="max-height: 60px;">
            </td>
            <td>
                <button type="button" class="btn btn-primary btn-fix"><i class="fa-solid fa-wrench"
                        style="color: #ffffff;"></i></button>
                <button type="button" class="btn btn-danger bt-del"><i class="fa-solid fa-trash"
                        style="color: #ffffff;"></i></button>
            </td>
        </tr>
    </tbody>
</table>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="get" id="form-books">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="book-name" class="col-form-label">Tên sản phẩm</label>
                        <input type="text" class="form-control" id="book-name" name="book-name">
                    </div>
                    <div class="form-group">
                        <label for="nhaxuatban" class="col-form-label">Nhà xuất bản</label>
                        <input type="text" name="nhaxuatban" class="form-control" id="nhaxuatban" />
                    </div>
                    <div class="form-group">
                        <label for="book-description" class="col-form-label">Mô tả</label>
                        <textarea class="form-control" id="book-description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="book-price" class="col-form-label">Giá mượn</label>
                        <input type="text" name="book-price" class="form-control" id="book-price" />
                    </div>
                    <div class="form-group">
                        <label for="book-category" class="col-form-label">Danh mục</label>
                        <select class="form-select" aria-label="Default select example" name="book-category"
                            id="book-category">
                            <option selected>Open this select menu</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="book-author" class="col-form-label">Tác giả</label>
                        <input type="text" name="book-author" class="form-control" id="book-author" />
                    </div>
                    <div class="form-group">
                        <label for="book-author" class="col-form-label">Hình ảnh</label>
                        <input type="text" name="book-author" class="form-control" id="book-author" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="btn-close" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="btn-action">Thực hiện</button>
                </div>
            </form>
        </div>
    </div>
</div>