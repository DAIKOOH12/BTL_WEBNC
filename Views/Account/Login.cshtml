@model DtoLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <title>@ViewData["Title"]</title>
</head>

<body>
    <div id="mainContainer">
        <div class="">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-xs-12 d-none d-lg-block d-md-block">
                    <div id="mainBgn"></div>
                </div>
                <div class="col-lg-6 col-md-6 col-xs-12">
                    <div class="p-4 centerOnMobile">
                        <div class="formContainer">
                            <h2 class="p-2 h4 text-center"><i class="fas fa-lock me-2"></i> Đăng nhập</h2>
                            <form asp-action="Login" asp-controller="Account" method="post" enctype="multipart/form-data">
                                <div class="form-floating my-3">
                                    <input type="email" class="form-control" asp-for="STaiKhoan" id="floatingInput"
                                           placeholder="name@example.com">
                                    <label for="floatingInput">Địa chỉ Email</label>
                                    <span asp-validation-for="STaiKhoan" class="text-danger"></span>
                                </div>
                                <div class="form-floating">
                                    <input type="password" class="form-control" asp-for="SMatKhau" id="floatingPassword"
                                        placeholder="Password">
                                    <label for="floatingPassword">Mật khẩu</label>
                                    <span asp-validation-for="SMatKhau" class="text-danger"></span>
                                </div>
                                <div id="btnHolder">
                                    <button class="btn btn-lg btn-primary mt-3 w-100">Đăng nhập</button>
                                </div>
                            </form>
                        </div>
                        <div class="mt-2 text-center">
                            Bạn chưa có tài khoản? <a href="./signup">Đăng ký</a><br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

</html>